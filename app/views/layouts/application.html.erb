<!DOCTYPE html>
<html>
<head>
  <title>Falling Lava</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-static-top navbar-default">
  <ul class="nav navbar-nav">
    <li class="nav-item active">
      <%= link_to("Game", {:controller => 'falling_lava', :action => 'new'}, {:class => 'nav-link'}) %>
    </li>
    <li class="nav-item">
      <%= link_to("Statistics", {:controller => 'falling_lava', :action => 'statistics'}, {:class => 'nav-link'}) %>
    </li>
  </ul>
</nav>
<script type="text/javascript">
  jQuery(document).ready(function() {

    jQuery(".nav a").on("click", function() {
      jQuery(".nav").find(".active").removeClass("active");
      jQuery(this).parent().addClass("active");
    });

    if (jQuery(location).attr('pathname').indexOf('statistics') != -1)
    {
      jQuery(".nav").find(".active").removeClass("active");
      jQuery(".nav a").each(function() {
        if(jQuery(this).attr("href").indexOf("statistics") != -1)
        {
          jQuery(this).parent().addClass("active");
        }
      });
    }
  });
</script>

<%= yield %>

</body>
</html>
